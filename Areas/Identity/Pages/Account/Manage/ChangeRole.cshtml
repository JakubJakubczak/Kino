@page
@model ChangeRoleModel
@{
    ViewData["Title"] = "Nadaj uprawnienia";
    ViewData["ActivePage"] = ManageNavPages.ChangeRole;
}

<h3>@ViewData["Title"]</h3>

<div>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-floating mb-3">
            <input asp-for="Input.Login" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Please enter your old password." />
            <label asp-for="Input.Login" class="form-label">Login</label>
            <span asp-validation-for="Input.Login" class="text-danger"></span>

          @*   <input asp-for="Input.Login" class="form-control" />
            <span asp-validation-for="Input.Login" class="text-danger"></span> *@
        </div>
        <div class="form-group">
            <label asp-for="Input.Role">Wybierz role</label>
            <select asp-for="Input.Role" class="form-control" asp-items="@(new SelectList(Model.AllRoles))"></select>
            <span asp-validation-for="Input.Role" class="text-danger"></span>
        </div>
       @*  <input type="hidden" asp-for="Input.Login" /> *@
        <button type="submit" class="btn btn-primary">Change Role</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}