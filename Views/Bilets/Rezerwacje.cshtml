@model IEnumerable<Kino.Models.Bilet>

@{
    ViewData["Title"] = "Lista Biletów";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Nazwa filmu</th>
                    <th>Data rozpoczęcia</th>
                    <th>Data zakończenia</th>
                    <th>Zarezerwowane miejsca</th>
                    <th>Akcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var bilet in Model)
                {
                    <tr>
                        <td>@bilet.SeansIdSeansNavigation?.FilmIdFilmNavigation?.Tytul</td>
                        <td>@bilet.SeansIdSeansNavigation?.TerminRozpoczecia.ToString("g")</td>
                        <td>@bilet.SeansIdSeansNavigation?.TerminZakonczenia.ToString("g")</td>
                        <td>@bilet.ZarezerwowaneMiejsca</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@bilet.IdBilet" class="btn btn-sm btn-warning">Edytuj</a>
                            <a asp-action="Delete" asp-route-id="@bilet.IdBilet" class="btn btn-sm btn-danger">Odwołaj</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
